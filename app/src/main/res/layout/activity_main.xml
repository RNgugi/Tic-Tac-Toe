<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#27acf3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8px"
    android:paddingRight="8px"
    android:paddingTop="8px"
    android:paddingBottom="8px"
    tools:context="com.reubyexample.android.tictactoe.MainActivity">

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="250dp"
        android:background="#2c76ed"
        android:elevation="24dp"
        android:text="Exit"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/display_board"
        android:text="CROSS's turn"
        android:textColor="#040d3d"
        android:textSize="18dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3"
        android:background="#347dca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/block_1"
            android:layout_marginBottom="4dp"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_2"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_3"
            android:layout_marginBottom="4dp"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_4"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_5"
            android:background="#B37927"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_6"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_7"
            android:layout_marginTop="4dp"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_8"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/block_9"
            android:layout_marginTop="4dp"
            android:background="#B37927"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </GridLayout>

    <View
        android:id="@+id/center_vertical"
        android:background="#F4301E"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="250dp" />

    <View
        android:id="@+id/left_vertical"
        android:background="#F4301E"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_height="250dp" />

    <View
        android:id="@+id/right_vertical"
        android:background="#F4301E"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_height="250dp" />

    <View
        android:id="@+id/center_horizontal"
        android:background="#F4301E"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="5dp" />

    <View
        android:id="@+id/bottom_horizontal"
        android:background="#F4301E"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_height="5dp" />

    <View
        android:id="@+id/top_horizontal"
        android:background="#F4301E"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_height="5dp" />

    <View
        android:id="@+id/right_left_diagonal"
        android:background="#F4301E"
        android:rotation="45"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="350dp" />

    <View
        android:id="@+id/left_right_diagonal"
        android:background="#F4301E"
        android:rotation="135"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="350dp" />

    <Button
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Replay"
        android:textAllCaps="false"
        android:textColor="#0c193d"
        android:background="#2c76ed"
        android:layout_marginLeft="100dp"/>

</FrameLayout>
